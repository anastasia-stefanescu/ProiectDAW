@model Proiect.Models.Subject

@* Afisarea unui subiect impreuna cu categoria din care face *@
<div class="d-flex justify-content-center">

    <a class="btn btn-outline-success" href="/Subjects/Index/">Afisare subiecte</a>

    <a class="btn btn-outline-success" href="/Subjects/New">Adauga subiect</a>

</div>

<br />

<div class="card">

    @Html.Partial("SubjectInfo", Model)


    @*
        * Mai sus se afla varianta in care se utilizeaza helperul @Html.Partial
        * Mai jos se afla varianta in care se utilizeaza tagul <partial>

        <partial name="SubjectInfo" model="Model"></partial> *@

    @*

        * Partialul inlocuieste secventa de cod comentata
        * Secventa a fost mutata in partialul SubjectInfo
        * Partial care este apelat

        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>

            <div class="card-text">@Model.Content</div>

            <div class="d-flex justify-content-between flex-row mt-5">

                <div><i class="bi bi-globe"></i> @Model.Category.CategoryName</div>

                <span class="alert-success">@Model.Date</span>

            </div>

        </div>

    *@

    <div class="d-flex flex-row justify-content-between">

        <a class="btn btn-success" href="/Subjects/Edit/@Model.Id">Editeaza subiect</a>

        <form method="post" action="/Subjects/Delete/@Model.Id">

            <button class="btn btn-danger" type="submit">Sterge subiect</button>

        </form>

    </div>

</div>

<br />
<br />

@* Afisare raspunsuri impreuna cu butoanele de editare si stergere *@

@foreach (var ans in Model.Answers)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    @* de facut butoane cu tagurile inainte de continut *@

                    <p>@ans.Content</p>
                    <small>@ans.Date</small>



                </div>
                <br>

                <div class="d-flex">

                    <div>

                        <a class="btn btn-outline-primary" href="/Answers/Edit/@ans.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>

                    </div>

                    <div>

                        <form method="post" action="/Answers/Delete/@ans.Id">

                            <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>

                        </form>

                    </div>

                </div>

                <br />

            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}


@* Afisarea formularului in care se poate adauga un raspuns *@

<div class="container">

    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" action="/Subjects/Show/@Model.Id">

                    <div class="card-body">

                        <input type="hidden" name="SubjectId" value="@Model.Id" />

                        <label>Descriere raspuns</label>
                        <br />

                        <textarea class="form-control" name="Content"></textarea>

                        @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

                        <br /><br />

                        <button class="btn btn-success " type="submit">Adauga raspunsul</button>

                    </div>

                </form>

            </div>

        </div>

        <div class="col-md-2"></div>

    </div>

</div>
