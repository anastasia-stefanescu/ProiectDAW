
@{
    ViewBag.Title = "Index";
}

<br />

<h2 class="text-center">Subiecte de discutie</h2>

<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}


<div class="d-flex justify-content-center">

    <a class="btn btn-outline-success" href="/Categories/Index/">Afisare categorii</a>
    <br />
    <a class="btn btn-outline-success" href="/Subjects/New">Adauga subiect</a>
    <br />

</div>

<br />


@foreach (Proiect.Models.Subject subject in ViewBag.Subjects)
{
    <div class="card">

        @Html.Partial("SubjectInfo", subject)

        <a class="btn btn-success" href="/Subjects/Show/@subject.Id">Afisare subiect</a>


        @*
            * Mai sus se afla varianta in care se utilizeaza helperul @Html.Partial
            * Mai jos se afla varianta in care se utilizeaza tagul <partial>

            <partial name="SubjectInfo" model="subject"></partial>

        *@


        @*
            * Partialul inlocuieste secventa de cod comentata
            * Secventa a fost mutata in partialul SubjectInfo
            * Partial care este apelat

            <div class="card-body">

                <h3 class="card-title alert-success py-3 px-3 rounded-2">@subject.Title</h3>

                <div class="card-text">@subject.Content</div>

                <div class="d-flex justify-content-between flex-row mt-5">

                    <div><i class="bi bi-globe"></i> @subject.Category.CategoryName</div>

                    <a class="btn btn-success" href="/Subjects/Show/@subject.Id">Afisare subiect</a>

                    <span class="alert-success">@subject.Date</span>

                </div>

            </div>

        *@

    </div>

    <br />
    <br />
}



